link: http://api.jquery.com/val/
ft: javascript
desc: Работаем со значением полей у форм
code: |
  <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
  <input type='text' value='Def value'>
  <script>
    var i = $('input')
    console.log(i.val())
    i.val('')
    console.log(i.val())
    i.val('New value')
    console.log(i.val())
  </script>
out: |
  Def value

  New value
