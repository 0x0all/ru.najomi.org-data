link: http://ru.php.net/max
desc: Получить минимальное/максимальное значение из набора цифр
data:
  -
    code: |
      <?php
      echo max(1, 3, 5, 6, 7);  
    out: |
      7
  -
    code: |
      echo max(array(2, 4, 5)); 
    out: |
      5
  -
    code: |
      echo min(2, 3, 1, 6, 7);  
    out: |
      1
  -
    code: |
      echo min(array(2, 4, 5)); 
    out: |
      2
